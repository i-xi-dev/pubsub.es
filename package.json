{
  "name": "@i-xi-dev/pubsub",
  "version": "2.0.0",
  "description": "A JavaScript Pub/Sub Broker.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --emitDeclarationOnly && webpack",
    "clean": "node -e \"fs.rmSync(`dist`, { recursive:true, force:true })\"",
    "lint": "eslint --ext ts --fix ./src/",
    "test": "jest",
    "test-dist:node": "mocha test/common/ --recursive",
    "test-dist:browser": "web-test-runner \"test/**/*.test.js\" --node-resolve --playwright --browsers chromium firefox webkit",
    "prepublish": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/i-xi-dev/pubsub.es.git"
  },
  "keywords": [
    "pubsub",
    "browser",
    "deno",
    "nodejs"
  ],
  "author": "i-xi-dev",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/i-xi-dev/pubsub.es/issues"
  },
  "homepage": "https://github.com/i-xi-dev/pubsub.es#readme",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=15.0.0"
  },
  "devDependencies": {
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^17.0.40",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "@web/test-runner": "^0.13.29",
    "@web/test-runner-playwright": "^0.8.9",
    "eslint": "^8.17.0",
    "jest": "^28.1.0",
    "mocha": "^10.0.0",
    "node-abort-controller": "^3.0.1",
    "ts-jest": "^28.0.4",
    "ts-loader": "^9.3.0",
    "typedoc": "^0.22.17",
    "typescript": "^4.7.3",
    "webpack": "^5.73.0",
    "webpack-cli": "^4.9.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
